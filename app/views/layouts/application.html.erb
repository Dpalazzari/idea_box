<!DOCTYPE html>
<html>
  <head>
    <title>IdeaBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
<header class="navbar  navbar-inverse">
  <div class="navbar-class">
      <ul class="nav navbar-nav">
        <li><img id='picture' src="http://www.freeiconspng.com/uploads/ideas-light-bulb-icon-16.png"/></li>
        <li><%= link_to 'New User?', new_user_path %></li>
        <% if current_user %>
          <li><%= link_to 'Logout', '/logout', method: :delete %></li>
        <% else %>
          <li><%= link_to 'Login', login_path %></li>
        <% end %>
        <% if current_user && current_user.admin? %>
          <li><%= link_to 'Users', admin_users_path %></li>
          <li><%= link_to 'Categories', admin_categories_path %></li>
        <% end %>
        <% if current_user %>
          <li><%= link_to 'Home', user_path(current_user.id) %></li>
        <% end %>
      </ul>
  </div>
</header>
<% if current_user %>
  <div class='container'>
    <h5>Hello, <%= current_user.name %>!</h5>
  </div>
  <% end %>
<div class='container'>
    <%= flash[:success] %>
  </div>
<div class='container'>
    <%= yield %>
  </div>
  </body>
</html>
