
<div class='container'>
  <h2>Log in to create a new idea!</h2>

  <div class='col-md-8'>
    <img class='giphy-img' src="https://media.giphy.com/media/VwVNY9PfXlWb6/giphy.gif">
  </div>
  <div class='col-md-4' id='user-login'>
    <%= form_tag '/login' do %>

      <%= label_tag :email %><br>
      <%= text_field_tag :email%><br>

      <%= label_tag :password %><br>
      <%= password_field_tag :password %><br>
      <br>
      <%= submit_tag 'Login', class: 'btn btn-warning'%>

    <% end %>
  </div>
</div>
